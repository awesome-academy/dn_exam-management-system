<div class="row function-name">
  <div class="col-md-10 offset-md-1 col-12 pt-3 pb-3">
    <p class="function-text"><%= t ".title" %></p>
  </div>
</div>
<div class="row mt-2">
  <div class="col-md-10 offset-md-1">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.label :password, t(".new_password") %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t "devise.registrations.new.pwd_min_length" %> )</em>
      <% end %><br />
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t(".password_confirmation") %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <div class="row mt-2">
        <div class="col text-center">
          <%= f.submit t(".btn_change_password"), class: "btn btn-primary " %>
        </div>
      </div>
    <% end %>
  </div>
</div>
