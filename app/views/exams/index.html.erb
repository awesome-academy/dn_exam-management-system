<% provide :placeholder, t(".placeholder_search_user") %>
<div class="content">
  <%= render "shared/search" %>
  <div class="row mt-2">
    <div class="col-md-10 offset-md-1">
      <div class="row mt-2">
        <div class="col">
          <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-list-alt"></i> <%= t ".exams_history" %>
            </div>
            <table class="table table-bordered table-hover">
              <thead>
                <tr class="text-center table-warning">
                  <th rowspan="1" class="align-middle"><%= t ".index" %></th>
                  <th rowspan="1" class="align-middle"><%= t ".subject" %></th>
                  <th rowspan="1" class="align-middle"><%= t ".created_at" %></th>
                  <th colspan="1" class="align-middle"><%= t ".spent_time" %></th>
                  <th colspan="1" class="align-middle"><%= t ".score" %></th>
                  <th colspan="1" class="align-middle"><%= t ".action" %></th>
                </tr>
              </thead>
            <tbody id = "search_result">
              <%= render "shared/search_result" %>
            </tbody>
          </table>
          <div class="card-footer">
            Sun-asterisk Â®
          </div>
        </div>
        <ul class="list-group">
          <br>
          <div class="d-inline">
          <div class="float-right">
            <%== pagy_bootstrap_nav @pagy %>
          </div>
        </div>
      </div>
    </ul>
</div>
