<li id="subject_<%= subject.id %>", class="list-group-item">
  <div class="float-left">
    <%= link_to subject.name, subject %>
    <% if can? :all, Exam %>
      | <%= link_to t(".start_exam"), new_subject_exam_path(subject_id: subject.id) %>
    <% end %>
  </div>
  <% if can? %i(update, delete, export), Subject %>
    <div class="float-right">
      <%= link_to export_admin_subject_path(subject.id, format: :pdf),
         method: :get do %>
        <i class="fa-solid fa-file-pdf"></i>
      <% end %>
      <%= link_to admin_subject_path(subject.id), method: :delete,
      data: {confirm: t(".confirm_delete")}, remote: true, class: "destroy-subject" do %>
        <i class="fa-solid fa-trash text-danger"></i>
      <% end %>
    </div>
  <% end %>
</li>
